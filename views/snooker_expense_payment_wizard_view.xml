<odoo>
    <record id="view_snooker_expense_payment_wizard_form" model="ir.ui.view">
        <field name="name">snooker.expense.payment.wizard.form</field>
        <field name="model">snooker.expense.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Expense Payment">
                <sheet>
                    <group>
                        <field name="expense_id" readonly="1"/>
                        <field name="amount"/>
                    </group>
                    <footer>
                        <button name="action_register_payment" string="Confirm Payment" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
                 <div class="oe_chatter">
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>
</odoo>
